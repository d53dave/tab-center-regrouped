{
  "name": "tabcenter-reborn",
  "scripts": {
    "lint": "prettier --write \"**/*.{js,yaml,html,css,json,yaml,md}\" && eslint . --fix && stylelint src/{options,sidebar}/*.css",
    "watch": "webpack-cli --mode development --watch --devtool=inline-source-map",
    "webext": "web-ext run --start-url about:debugging -s src",
    "dev": "concurrently --kill-others --raw -s first npm:webext npm:watch",
    "webext-lint": "web-ext lint -s src/ -i sidebar/dist/ test/vendor/",
    "build": "webpack-cli --mode production && web-ext build -s src/ -i 'sidebar/**/*.js' '!sidebar/dist/bundle.js' --overwrite-dest",
    "build-source": "tar cavf web-ext-artifacts/tabcenter-reborn.tar.gz -X .gitignore -X .tarignore ."
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true,
      "webextensions": true
    },
    "extends": "prettier",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "rules": {
      "eqeqeq": "error",
      "no-var": "error",
      "prefer-const": "error",
      "prefer-template": "error"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,yaml,html,css,json,yaml,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://framagit.org/ariasuni/tabcenter-reborn.git"
  },
  "author": "MÃ©lanie Chauvel (ariasuni)",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://framagit.org/ariasuni/tabcenter-reborn/issues"
  },
  "homepage": "https://framagit.org/ariasuni/tabcenter-reborn#readme",
  "devDependencies": {
    "concurrently": "^4.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "scroll-into-view-if-needed": "^2.2.20",
    "smooth-scroll-into-view-if-needed": "^1.1.23",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "web-ext": "^3.1.1",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6"
  },
  "dependencies": {
    "fuzzysort": "^1.1.4"
  }
}
