{
  "name": "tabcenter-reborn",
  "sideEffects": false,
  "scripts": {
    "lint-prettier": "prettier --write \"**/*.{js,yaml,html,css,json,yaml,md}\"",
    "lint-eslint": "eslint . --fix",
    "lint-stylelint": "stylelint **/*.css",
    "lint": "npm run lint-prettier && npm run lint-eslint && npm run lint-stylelint",
    "watch": "webpack-cli --mode development --watch --devtool=inline-source-map",
    "webext": "web-ext run --start-url about:debugging -s src",
    "dev": "concurrently --kill-others --raw -s first npm:webext npm:watch",
    "webext-lint": "web-ext lint -s src/ -i sidebar/dist",
    "build": "webpack-cli --mode production && web-ext build -s src/ -i 'sidebar/**/*.js' '!sidebar/dist/sidebar.bundle.js' --overwrite-dest",
    "build-source": "tar cavf web-ext-artifacts/tabcenter-reborn.tar.gz -X .gitignore -X .tarignore ."
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true,
      "webextensions": true
    },
    "extends": "prettier",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "rules": {
      "eqeqeq": "error",
      "no-var": "error",
      "prefer-const": "error",
      "prefer-template": "error"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,yaml,html,css,json,yaml,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://framagit.org/ariasuni/tabcenter-reborn.git"
  },
  "author": "MÃ©lanie Chauvel (ariasuni)",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://framagit.org/ariasuni/tabcenter-reborn/issues"
  },
  "homepage": "https://framagit.org/ariasuni/tabcenter-reborn#readme",
  "devDependencies": {
    "concurrently": "^4.1.2",
    "eslint": "^6.5.0",
    "eslint-config-prettier": "^6.3.0",
    "husky": "^3.0.7",
    "lint-staged": "^9.4.0",
    "prettier": "^1.18.2",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "web-ext": "^3.2.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^2.5.3",
    "fuzzysort": "^1.1.4",
    "smooth-scroll-into-view-if-needed": "^1.1.23"
  }
}
